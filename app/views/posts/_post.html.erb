<div id="<%= dom_id post %>">
  <p>
    <strong>Image:</strong>
    <%= post.image %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user.email %>
  </p>

   <p>
    <strong>Comment:</strong>
    <%post.comments.each do |c|%>
    <%= c.content%>
    <%end%>
  </p>
  

</div>
